<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.TerLogDao">

    <select id="listBySearch" parameterType="com.tp.admin.data.search.WashLogSearch" resultMap="TerLogMap">
        SELECT *
        FROM `ter_log`
        WHERE order_id = #{orderId}
        ORDER BY create_time DESC
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>

    <select id="cntBySearch" resultType="java.lang.Integer">
        SELECT
        COUNT(id)
        FROM `ter_log`
        WHERE order_id = #{orderId}
    </select>

    <select id="latestRecordByCode" resultMap="TerLogMap">
      SELECT *
      FROM `ter_log`
      WHERE
      `code` = #{code}
      ORDER BY create_time DESC
      LIMIT 0 , 1
    </select>

    <resultMap id="TerLogMap" type="com.tp.admin.data.entity.TerLog">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
        <result column="info" property="info" jdbcType="INTEGER"/>
        <result column="order_id" property="orderId" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="need_wait" property="needWait" jdbcType="INTEGER"/>
        <result column="valid" property="valid" jdbcType="BIT" />
        <result column="detail" property="detail" jdbcType="VARCHAR"/>
    </resultMap>
    
</mapper>