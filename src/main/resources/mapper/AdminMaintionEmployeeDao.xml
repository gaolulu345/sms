<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.AdminMaintionEmployeeDao">

    <insert id="insert" parameterType="com.tp.admin.data.entity.AdminMaintionEmployee" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        INSERT INTO `admin_maintion_employee` (
			`mini_wx_id`,
			`wx_union_id`,
			`name`,
			`phone`,
			`form_id`,
			`enable`
		) VALUES (
			#{miniWxId},
			#{wxUnionId},
			#{name},
			#{phone},
			#{formId},
			#{enable}
		)
    </insert>

    <select id="findByWxMiniId" parameterType="java.lang.String" resultMap="AdminMaintionEmployeeMap">
      SELECT * FROM
      `admin_maintion_employee`
      WHERE
      `mini_wx_id` = #{code}
      LIMIT 0 , 1
    </select>

    <select id="findByPhone" resultMap="AdminMaintionEmployeeMap">
      SELECT * FROM
      `admin_maintion_employee`
      WHERE
      `phone` = #{phone}
      LIMIT 0 , 1
    </select>

    <select id="cntBySearch" resultType="java.lang.Integer">
        SELECT
        COUNT(*)
        FROM
        `admin_maintion_employee`
    </select>

    <select id="listBySearch" resultMap="AdminMaintionEmployeeMap">
        SELECT
        *
        FROM
        `admin_maintion_employee`
        ORDER BY deleted ASC , id DESC
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>

    <select id="findById" resultMap="AdminMaintionEmployeeMap" >
      SELECT * FROM
      `admin_maintion_employee`
      WHERE
      `id` = #{id}
      LIMIT 0 , 1
    </select>

    <update id="bachUpdateDeleted" parameterType="com.tp.admin.data.search.MaintionEmployeeSearch">
        UPDATE
        `admin_maintion_employee`
        SET
        deleted = #{deleted}
        WHERE
        id IN
        <foreach collection="ids" index="index" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </update>

    <update id="updateEnable" parameterType="com.tp.admin.data.search.MaintionEmployeeSearch">
        UPDATE
        `admin_maintion_employee`
        SET
        enable = #{enable}
        WHERE
        id = #{id}
    </update>

    <update id="updateMaintionLoginTime" parameterType="com.tp.admin.data.entity.AdminMaintionEmployee">
        UPDATE admin_maintion_employee
		SET last_login_time=#{lastLoginTime}
		WHERE id=#{id}
    </update>


    <select id="findByIdsBatch" parameterType="com.tp.admin.data.search.MaintionEmployeeSearch" resultMap="AdminMaintionEmployeeMap">
        SELECT * FROM admin_maintion_employee
        WHERE
        <if test="ids != null">
            id IN
            <foreach collection="ids" index="index" item="item" separator="," open="(" close=")">
                #{item}
            </foreach>
        </if>
    </select>

    <resultMap id="AdminMaintionEmployeeMap" type="com.tp.admin.data.entity.AdminMaintionEmployee">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="mini_wx_id" property="miniWxId" jdbcType="VARCHAR"/>
        <result column="wx_union_id" property="wxUnionId" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="form_id" property="formId" jdbcType="VARCHAR"/>
        <result column="deleted" property="deleted" jdbcType="BIT" />
        <result column="enable" property="enable" jdbcType="BIT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP" />
    </resultMap>

</mapper>