<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.AdminMerchantEmployeeDao">

    <insert id="insert">
        INSERT INTO `admin_merchant_employee` (
			`mini_wx_id`,
			`wx_union_id`,
			`name`,
			`phone`,
			`form_id`,
			`enable`
		) VALUES (
			#{miniWxId},
			#{wxUnionId},
			#{name},
			#{phone},
			#{formId},
			#{enable}
		)
    </insert>

	<select id="findById" resultMap="AdminMerchantEmployeeMap">
	  SELECT * FROM
      `admin_merchant_employee`
      WHERE
      `id` = #{id}
      LIMIT 0 , 1
	</select>

	<select id="findByWxMiniId" resultMap="AdminMerchantEmployeeMap">
	  SELECT * FROM
      `admin_merchant_employee`
      WHERE
      `mini_wx_id` = #{code}
      LIMIT 0 , 1
	</select>

    <select id="findByPhone" resultMap="AdminMerchantEmployeeMap">
	  SELECT * FROM
      `admin_merchant_employee`
      WHERE
      `phone` = #{phone}
      LIMIT 0 , 1
	</select>

    <select id="cntBySearch" parameterType="com.tp.admin.data.search.MerchantEmployeeSearch"
			resultType="java.lang.Integer">
		SELECT
        COUNT(*)
        FROM
        `admin_merchant_employee`
	</select>

	<select id="listBySearch" parameterType="com.tp.admin.data.search.MerchantEmployeeSearch" resultMap="AdminMerchantEmployeeMap">
		SELECT
		*
		FROM
		`admin_merchant_employee`
		ORDER BY deleted DESC , id DESC
		<if test="pageSize != null and pageSize !=0 and offset != null">
			LIMIT #{offset},#{pageSize}
		</if>
	</select>


    <update id="bachUpdateDeleted" parameterType="com.tp.admin.data.search.MerchantEmployeeSearch">
		UPDATE
		`admin_merchant_employee`
		SET
		deleted = #{deleted}
		WHERE
		id IN
		<foreach collection="ids" index="index" item="item" separator="," open="(" close=")">
			#{item}
		</foreach>
	</update>

	<update id="updateEnable" parameterType="com.tp.admin.data.search.MerchantEmployeeSearch">
		UPDATE
		`admin_merchant_employee`
		SET
		enable = #{enable},
		partner_id = #{partnerId}
		WHERE
		id = #{id}
	</update>

	<update id="updateMerchantLoginTime" parameterType="com.tp.admin.data.entity.AdminMerchantEmployee">
		UPDATE admin_merchant_employee
		SET last_login_time=#{lastLoginTime}
		WHERE id=#{id}
	</update>

	<resultMap id="AdminMerchantEmployeeMap" type="com.tp.admin.data.entity.AdminMerchantEmployee">
		<id column="id" property="id" jdbcType="INTEGER"/>
		<result column="mini_wx_id" property="miniWxId" jdbcType="VARCHAR"/>
		<result column="wx_union_id" property="wxUnionId" jdbcType="VARCHAR"/>
		<result column="partner_id" property="partnerId" jdbcType="INTEGER"/>
		<result column="name" property="name" jdbcType="VARCHAR"/>
		<result column="phone" property="phone" jdbcType="VARCHAR"/>
		<result column="form_id" property="formId" jdbcType="VARCHAR"/>
		<result column="deleted" property="deleted" jdbcType="BIT" />
		<result column="enable" property="enable" jdbcType="BIT" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
		<result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP" />
	</resultMap>

</mapper>