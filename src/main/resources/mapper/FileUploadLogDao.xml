<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.FileUploadLogDao">

    <insert id="insert" parameterType="com.tp.admin.data.entity.FileUploadLog" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        INSERT INTO `file_upload_log_admin` (
			`admin_name`,
			`file_key`
		) VALUES (
			#{adminName},
			#{fileKey}
		)
    </insert>

    <delete id="bachUpdateDeleted">
        DELETE FROM `file_upload_log_admin`
        WHERE
        id iN
        <foreach collection="ids" index="index" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>


    <select id="cntBySearch" parameterType="com.tp.admin.data.search.FileSearch" resultType="java.lang.Integer">
        SELECT
        COUNT(id)
        FROM
        `file_upload_log_admin`
        <where>
            <if test="adminName != null">
                AND `admin_name` LIKE CONCAT('%',#{adminName},'%')
            </if>
            <if test="fileKey != null">
                AND `file_key` LIKE CONCAT('%',#{fileKey},'%')
            </if>
            <if test="startTime != null">
                AND create_time &gt; #{startTime}
            </if>
            <if test="endTime != null">
                AND create_time &lt; #{endTime}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>


    <select id="listBySearch" parameterType="com.tp.admin.data.search.FileSearch" resultMap="FileUploadLogMap">
        SELECT *
        FROM
        `file_upload_log_admin`
        <where>
            <if test="adminName != null">
                AND `admin_name` LIKE CONCAT('%',#{adminName},'%')
            </if>
            <if test="fileKey != null">
                AND `file_key` LIKE CONCAT('%',#{fileKey},'%')
            </if>
            <if test="startTime != null">
                AND create_time &gt; #{startTime}
            </if>
            <if test="endTime != null">
                AND create_time &lt; #{endTime}
            </if>
        </where>
        ORDER BY create_time DESC
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>

    <resultMap id="FileUploadLogMap" type="com.tp.admin.data.entity.FileUploadLog">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="admin_name" property="adminName" jdbcType="VARCHAR"/>
        <result column="bucket_name" property="bucketName" jdbcType="VARCHAR"/>
        <result column="file_key" property="fileKey" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

</mapper>