<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.TemplateDao">
    <insert id="insertTemplateInfo" parameterType="com.tp.admin.data.entity.AdminTemplateInfo">
        INSERT INTO admin_template_info(
		template_id,
		type,
		template_desc,
		service_type)
		VALUES(
		#{template_id},
		#{type},
		#{template_desc},
		#{service_type})
    </insert>
    
    <select id="searchMasterplateTool" parameterType="com.tp.admin.data.search.AdminAutoSearch" resultType="string">
        SELECT asi.value
        FROM admin_service_info asi
        WHERE asi.key=#{key}
        AND asi.type = #{type}
    </select>

    <select id="searchServiceInfoList" parameterType="com.tp.admin.data.search.AdminAutoSearch" resultMap="AdminAutoMap">
        SELECT * FROM admin_service_info AS asi
        WHERE asi.deleted = 0
        <if test="key != null">
            AND asi.key = #{key}
        </if>
        <if test="type != null">
            AND asi.type = #{type}
        </if>
    </select>

    <select id="searchTemplateId" parameterType="java.lang.Integer" resultMap="TemplateInfoMap">
        SELECT ti.template_id,
        ti.template_desc,
        ti.type,
        ti.service_type
        FROM admin_template_info ti
        WHERE id=#{id}
    </select>

    <resultMap id="TemplateInfoMap" type="com.tp.admin.data.entity.AdminTemplateInfo">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="template_id" property="templateId" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="INTEGER" />
        <result column="template_desc" property="templateDesc" jdbcType="VARCHAR" />
        <result column="service_type" property="serviceType" jdbcType="INTEGER" />
    </resultMap>

    <resultMap id="AdminAutoMap" type="com.tp.admin.data.entity.AdminServiceInfo">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="key" property="key" jdbcType="VARCHAR" />
        <result column="value" property="value" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="INTEGER" />
    </resultMap>
</mapper>