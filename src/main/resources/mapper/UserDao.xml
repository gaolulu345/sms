<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.UserDao">
    <select id="cntBySearch" parameterType="com.tp.admin.data.search.UserSearch"  resultType="java.lang.Integer">
        SELECT COUNT(*) FROM
        `user`
        WHERE
        deleted = 0
        AND
        (type = 3 OR type = 4)
        <if test="phone != null">
            AND phone LIKE CONCAT('%',#{phone},'%')
        </if>
        <if test="id != null and id != 0">
            AND id = #{id}
        </if>
        <if test="startTime != null">
            AND create_time &gt; #{startTime}
        </if>
        <if test="endTime != null">
            AND create_time &lt; #{endTime}
        </if>
        ORDER BY id DESC
    </select>

    <select id="listBySearch" parameterType="com.tp.admin.data.search.UserSearch" resultMap="UserDTOMap">
        SELECT u.* , uinfo.avatar , uinfo.city , uinfo.nickname , uinfo.gender  FROM
        `user` AS u LEFT JOIN `user_info` AS uinfo ON u.id = uinfo.user_id
        WHERE
        u.deleted = 0
        AND
        (type = 3 OR type = 4)
        <if test="phone != null">
            AND u.phone LIKE CONCAT('%',#{phone},'%')
        </if>
        <if test="id != null and id != 0">
            AND u.id = #{id}
        </if>
        <if test="startTime != null">
            AND u.create_time &gt; #{startTime}
        </if>
        <if test="endTime != null">
            AND u.create_time &lt; #{endTime}
        </if>
        ORDER BY id DESC
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>
    
    <select id="listUserInfoOfWashCard" parameterType="com.tp.admin.data.search.UserSearch" resultMap="UserDTOMap">
        SELECT `user`.id,`user`.phone,user_info.avatar,user_info.province,user_info.city,user_info.nickname
        FROM user_info
        INNER JOIN `user`
        ON `user`.id=user_info.user_id
        WHERE `user`.deleted=0
        <if test="ids != null and ids.size != 0">
            AND
            `user`.id IN
            <foreach collection="ids" item="userId" index="index"
                     open="(" close=")" separator=",">
                #{userId}
            </foreach>
        </if>
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>

    <resultMap id="UserDTOMap" type="com.tp.admin.data.dto.UserDTO">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="avatar" property="avatar" jdbcType="VARCHAR" />
        <result column="city" property="city" jdbcType="VARCHAR" />
        <result column="nickname" property="nickname" jdbcType="VARCHAR" />
        <result column="gender" property="gender" jdbcType="TINYINT" />
        <result column="mini_wxid" property="miniWxid" jdbcType="VARCHAR" />
        <result column="ali_id" property="aliId" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="TINYINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP" />
    </resultMap>
</mapper>