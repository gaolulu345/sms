<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.UserDao">
    <select id="cntBySearch" parameterType="com.tp.admin.data.search.UserSearch"  resultType="java.lang.Integer">
        SELECT COUNT(*) FROM
        `user`
        WHERE
        deleted = 0
        AND
        (type = 3 OR type = 4)
        <if test="phone != null">
            AND phone LIKE CONCAT('%',#{phone},'%')
        </if>
        <if test="id != null and id != 0">
            AND id = #{id}
        </if>
        <if test="startTime != null">
            AND create_time &gt; #{startTime}
        </if>
        <if test="endTime != null">
            AND create_time &lt; #{endTime}
        </if>
        ORDER BY id DESC
    </select>
    <select id="listBySearch" parameterType="com.tp.admin.data.search.UserSearch" resultMap="UserMap">
        SELECT * FROM
        `user`
        WHERE
        deleted = 0
        AND
        (type = 3 OR type = 4)
        <if test="phone != null">
            AND phone LIKE CONCAT('%',#{phone},'%')
        </if>
        <if test="id != null and id != 0">
            AND id = #{id}
        </if>
        <if test="startTime != null">
            AND create_time &gt; #{startTime}
        </if>
        <if test="endTime != null">
            AND create_time &lt; #{endTime}
        </if>
        ORDER BY id DESC
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>

    <resultMap id="UserMap" type="com.tp.admin.data.entity.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="wxid" property="wxid" jdbcType="VARCHAR" />
        <result column="mini_wxid" property="miniWxid" jdbcType="VARCHAR" />
        <result column="wx_unionid" property="wxUnionid" jdbcType="VARCHAR" />
        <result column="ali_id" property="aliId" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="TINYINT" />
        <result column="deleted" property="deleted" jdbcType="BIT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="last_login_time" property="lastLoginTime"
                jdbcType="TIMESTAMP" />
    </resultMap>
</mapper>