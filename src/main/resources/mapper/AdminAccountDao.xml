<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tp.admin.dao.AdminAccountDao">

    <insert id="insert" parameterType="com.tp.admin.data.entity.AdminAccount" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        INSERT INTO `admin_account` (
			`username`,
			`password`,
			`intros`,
			`name`
		) VALUES (
			#{username},
			#{password},
			#{intros},
			#{name}
		)
    </insert>

    <update id="update" parameterType="com.tp.admin.data.entity.AdminAccount">
        UPDATE
        `admin_account`
        <trim prefix="set" suffixOverrides=",">
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="intros != null">
                intros = #{intros},
            </if>
        </trim>
        WHERE
        id = #{id}
    </update>

    <select id="findByUsername" resultMap="AdminAccountMap">
      SELECT DISTINCT * FROM
		`admin_account`
		WHERE
		username = #{username}
		AND
		deleted = 0
		AND
		enable = 1
		LIMIT 0 , 1
    </select>

    <select id="cntBySearch" parameterType="com.tp.admin.data.search.AdminSearch" resultType="java.lang.Integer">
        SELECT
        COUNT(id)
        FROM
        `admin_account`
        <where>
            <if test="null != deleted">
                deleted = #{deleted}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <select id="listBySearch" parameterType="com.tp.admin.data.search.AdminSearch" resultMap="AdminAccountDTOMap">
        SELECT
        aa.*,
        ar.id AS roles_id ,
        ar.roles_name
        FROM
        `admin_account` AS aa
        INNER JOIN `admin_pk_account_roles` AS apar ON aa.id = apar.admin_id
        INNER JOIN `admin_roles` AS ar ON ar.id = apar.roles_id
        <where>
            <if test="null != deleted">
                aa.deleted = #{deleted}
            </if>
        </where>
        ORDER BY id DESC
        <if test="pageSize != null and pageSize !=0 and offset != null">
            LIMIT #{offset},#{pageSize}
        </if>
    </select>

    <select id="findById" resultMap="AdminAccountMap">
      SELECT DISTINCT * FROM
		`admin_account`
		WHERE
		id = #{id}
		AND
		deleted = 0
		AND
		enable = 1
		LIMIT 0 , 1
    </select>

    <update id="updateLastLoginTime">
        UPDATE
		`admin_account`
		SET
		last_login_time = #{time}
		WHERE
		id = #{id}
    </update>

    <update id="bachUpdateDeleted" parameterType="com.tp.admin.data.search.AdminSearch">
        UPDATE
        `admin_account`
        SET
        deleted = #{deleted}
        WHERE
        id IN
        <foreach collection="ids" index="index" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </update>

    <resultMap id="AdminAccountMap" type="com.tp.admin.data.entity.AdminAccount">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="intros" property="intros" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="deleted" property="deleted" jdbcType="BIT" />
        <result column="enable" property="enable" jdbcType="BIT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <resultMap id="AdminAccountDTOMap" type="com.tp.admin.data.dto.AdminAccountDTO">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="roles_id" property="rolesId" jdbcType="VARCHAR" />
        <result column="roles_name" property="rolesName" jdbcType="VARCHAR" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="intros" property="intros" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="deleted" property="deleted" jdbcType="BIT" />
        <result column="enable" property="enable" jdbcType="BIT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP" />
    </resultMap>

</mapper>